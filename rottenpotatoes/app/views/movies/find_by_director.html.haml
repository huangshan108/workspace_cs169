%h1= "'" + @current_movie.title + "' has no director info"
%table#movies
  %thead
    %tr
      %th{ :class => ('hilite' if @sorted_movie_title) }= link_to "Movie Title", movies_path(:sort => 'sort_movie_title'), :id => 'title_header'
      %th Rating
      %th{ :class => ('hilite' if @sorted_release_date) }= link_to "Release Date", movies_path(:sort => 'sort_release_date'), :id => 'release_date_header'
      %th Director
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)
