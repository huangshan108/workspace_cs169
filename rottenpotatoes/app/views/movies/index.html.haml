-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :id => 'ratings_form', :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", nil, @ratings_on[rating] ? :checked : nil
  = submit_tag 'Refresh', :id => 'ratings_submit'

- if @movies == 'NO_DIR'
  %div= "'" + @no_title + "' has no director info"
- else
  %table#movies
    %thead
      %tr
        %th{ :class => ('hilite' if @sorted_movie_title) }= link_to "Movie Title", movies_path(:sort => 'sort_movie_title'), :id => 'title_header'
        %th Rating
        %th{ :class => ('hilite' if @sorted_release_date) }= link_to "Release Date", movies_path(:sort => 'sort_release_date'), :id => 'release_date_header'
        %th Director
        %th More Info
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie.title 
          %td= movie.rating
          %td= movie.release_date
          %td= movie.director
          %td= link_to "More about #{movie.title}", movie_path(movie)

  = link_to 'Add new movie', new_movie_path
